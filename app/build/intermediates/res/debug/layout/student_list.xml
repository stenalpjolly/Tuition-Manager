<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/list_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtlist_today"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="TODAY"
                android:textColor="#205858" />

            <View
                android:id="@+id/viewlist_today"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#205858" />

            <LinearLayout
                android:id="@+id/list_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <TextView
                android:id="@+id/txtlist_frequent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="FREQUENTLY USED"
                android:textColor="#205858" />

            <View
                android:id="@+id/viewlist_frequent"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#205858" />

            <LinearLayout
                android:id="@+id/list_frquently_used"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <TextView
                android:id="@+id/txtlist_active"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="ALL ACTIVE"
                android:textColor="#205858" />

            <View
                android:id="@+id/viewlist_active"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#205858" />

            <LinearLayout
                android:id="@+id/list_all_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <TextView
                android:id="@+id/txtlist_inactive"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="ALL INACTIVE"
                android:textColor="#205858" />

            <View
                android:id="@+id/viewlist_inactive"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#205858" />

            <LinearLayout
                android:id="@+id/list_all_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/item"
        android:gravity="right|center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="CLOSE"
        android:textColor="#205858"
        android:textStyle="bold" />

</LinearLayout><!-- From: file:/D:/Works/Tuition%20Manager/Android%20Studio%20Version/AS%20Version/app/src/main/res/layout/student_list.xml -->