                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spj.tuitionmanager.MainActivity" />
        </activity>
        <activity
            android:name="com.spj.tuitionmanager.ReportGenerator"
            android:label="@string/title_activity_report_generator"
